{
  "manifest_version": 3,
  "name": "FloatingCopilot",
  "version": "0.2.0",
  "description": "基于 Vue + shadcn-vue 的侧边栏 AI 助手，支持聊天、翻译与网页分析。",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  ],
  "action": {
    "default_title": "打开 FloatingCopilot 辅助侧边栏"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "commands": {
    "open-global-window": {
      "suggested_key": { "default": "Ctrl+Shift+O" },
      "description": "打开 FloatingCopilot 全局助手窗口"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
