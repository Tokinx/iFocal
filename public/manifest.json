{
  "manifest_version": 3,
  "name": "FloatingCopilot",
  "version": "0.2.0",
  "description": "基于 Vue + shadcn-vue 的侧边栏 AI 助手，支持聊天、翻译与网页分析。",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "打开 FloatingCopilot 侧边栏"
  },
  "side_panel": {
    "default_path": "src/sidebar/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}