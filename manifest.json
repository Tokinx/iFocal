{
  "manifest_version": 3,
  "name": "FloatingCopilot",
  "version": "0.2.0",
  "description": "FloatingCopilot side panel assistant built with Vue + shadcn-vue. Supports chat, translation and page insight.",
  "permissions": ["storage","activeTab","scripting","clipboardRead","contextMenus","sidePanel"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open FloatingCopilot Side Panel"
  },
  "side_panel": {
    "default_path": "dist/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "dist/assets/content.css"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "dist/options.html",
  "commands": {
    "open-global-window": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Open FloatingCopilot global assistant window"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}

