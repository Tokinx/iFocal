{
  "manifest_version": 3,
  "name": "iFocal",
  "version": "0.3.0",
  "description": "iFocal assistant with selection/overlay translate and a global window, built with Vue + shadcn-vue.",
  "permissions": ["storage","clipboardRead"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open iFocal Assistant"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "dist/options.html",
  "commands": {
    "open-global-window": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Open iFocal global assistant window"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
